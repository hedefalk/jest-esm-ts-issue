{
  "include": ["src/**/*ts", "src/**/*json"],
  "compilerOptions": {
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "ES2020",
    "composite": true,
    "moduleResolution": "node", // Very important
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "listEmittedFiles": true
    // "listFiles": true
  }
}
